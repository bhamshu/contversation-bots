generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tweet {
  id                Int      @id @default(autoincrement())
  userName          String
  isVerified        Boolean
  userHandle        String   
  tweetTimestamp    DateTime
  tweetText         String   @db.Text
  tweetUrl          String   @unique
  numberOfLikes     String
  numberOfRetweets  String
  numberOfComments  String
}

model redditPost {
  id                Int      @id @default(autoincrement())
  userName          String
  subreddit         String
  timestamp         DateTime
  postTitle         String
  postUrl           String   @unique
}